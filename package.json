    "cross-env": "^7.0.3",
    "cross-var": "1.1.0",
    "cssnano": "^5.1.12",
    "cypress": "^13.3.0",
    "dotenv-cli": "3.0.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",

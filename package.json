{
  "name": "magma",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -e .env -- sh -c 'turbo run build'",
    "build:web": "dotenv -e .env -- sh -c 'turbo run build --filter=web'",
    "build:abm": "dotenv -e .env -- sh -c 'turbo run build --filter=abm'",
    "build:press": "dotenv -e .env -- sh -c 'turbo run build --filter=press'",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=web",
    "start:abm": "turbo run start --filter=abm",
    "start:press": "turbo run start --filter=press",
    "start:docusaurus": "turbo run start --filter=docusaurus",
    "contentful": "contentful",
    "dev": "dotenv -e .env -- sh -c 'turbo run dev --parallel'",
    "dev:web": "dotenv -e .env -- sh -c 'turbo run dev --filter=web'",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "tsc --noEmit --pretty",
    "get-types": "dotenv -e .env -- sh -c 'contentful space export --spaceId $CF_SPACE_ID --environment-id $CF_ENVIRONMENT --management-token=$CF_CMA_TOKEN --export-dir ./contentful --skip-content true --skip-roles true --skip-webhooks true --content-file content-model.json && node ./contentful/build-types.mjs'",
    "test": "turbo run test",
    "cypress:open": "turbo run cypress:open",
    "cypress:run": "turbo run cypress:run",
    "storybook": "dotenv -e .env -- sh -c 'turbo run storybook'",
    "prereinstall": "rm -rf ./package-lock.json ./node_modules ./*/node_modules",
    "reinstall": "HTTP_PROXY=localhost npm_config_package_lock=true FONTAWESOME_NPM_AUTH_TOKEN=746207FA-B202-4BF4-83E2-2F2C6D741218 npm i @fortawesome/fontawesome-pro"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@chakra-ui/storybook-addon": "^5.0.1",
    "@commitlint/cli": "^17.0.3",

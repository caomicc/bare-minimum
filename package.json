    "swiper": "^9.2.0",
    "webpack": "^5.76.0",
    "yup": "^0.32.11",
    "yup-phone": "^1.3.2"
  },
  "packageManager": "npm@8.11.0",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
